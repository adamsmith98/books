<div class="flex w-4xl">
    <%= image_tag @book.image_url, class: "h-96 rounded-sm border-1 border-gray-400 dark:border-gray-600" %>
    <div class="flex flex-col ml-4">
        <h1 class="text-4xl text-gray-600 dark:text-gray-200 font-medium"><%= @book.title %></h1>
        <p class="text-gray-500 dark:text-gray-400 font-light mt-2"><%= @book.author %></p>
        <p class="text-xs text-gray-400 dark:text-gray-200 mt-2"><%= @book.description %></p>
        <div class="flex mt-2">
            <svg class="size-5 fill-amber-300 stroke-gray-600 dark:stroke-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-600 dark:text-gray-300 font-light text-sm pl-1"><%= @book.rating.round(2) %></span>
            <span class="text-gray-400 dark:text-gray-400 font-light text-sm pl-1">(<%= @book.ratings_count %>)</span>
        </div>
        <%= button_to "", class: "mt-2 group bg-indigo-500 hover:bg-indigo-600 border-indigo-300 dark:border-indigo-800 border-1 rounded-md overflow-hidden transition duration-300" do %>
            <div class="w-full h-full border-b-4 border-t-1 border-b-indigo-700 hover:border-b-indigo-800 border-t-indigo-200 hover:border-t-indigo-300 flex justify-center items-center transition duration-300">
                <svg class="stroke-white size-6 group-hover:stroke-gray-100 transition duration-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                <span class="py-4 pr-4 text-white group-hover:text-gray-100">Add to list</span>
            </div>
        <% end %>
    </div>
</div>