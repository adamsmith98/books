<div class="flex flex-col">
    <h1 class="text-4xl font-bold text-center bg-linear-to-r from-indigo-500 to-cyan-500 bg-clip-text text-transparent">Find any book</h1>
    <div class="relative">
        <%= search_field_tag "search", nil, placeholder: "Find a book", class: "rounded-2xl border border-gray-300 shadow-xs w-xl h-16 p-4 pr-10 outline-0 mt-6" %>
        <%= button_to "", class: "size-8 bg-linear-to-r from-indigo-500 to-cyan-500 hover:from-indigo-600 hover:to-cyan-600 rounded-3xl flex justify-center items-center absolute right-1 bottom-1" do %>
            <svg class="size-4 stroke-white stroke-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
            </svg>
        <% end %>
    </div>
    <% @books.each do |book| %>
        <div class="rounded-2xl border border-gray-200 overflow-hidden flex justify-between mt-8 w-xl">
            <div class="flex">
                <%= image_tag book["image_url"], class: "w-32 object-cover" if book["image_url"] %>
                <div class="flex flex-col ml-4 py-4">
                    <h2 class="text-2xl text-gray-600 font-medium"><%= book["title"] %></h2>
                    <h3 class="text-sm text-gray-500 font-light italic"><%= book["subtitle"] %></h3>
                    <p class="text-gray-400 font-light mt-1">
                        <%= book["authors"].join(", ") %>
                    </p>
                    <p class="text-xs text-gray-500 my-2"><%= strip_tags(book["description"]).truncate(170) if book["description"] %></p>
                    <div class="flex">
                        <% book["average_rating"].to_i.times do %>
                            <svg class="size-5 fill-amber-300 stroke-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                            </svg>
                        <% end %>
                        <% (5 - book["average_rating"].to_i).times do %>
                            <svg class="size-5 stroke-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                            </svg>
                        <% end %>
                        <span class="text-gray-600 font-light text-sm pl-1"><%= book["ratings_count"] %></span>
                    </div>
                </div>
            </div>
            <%= button_to "", class: "group size-12 rounded-3xl border-2 border-indigo-500  hover:bg-indigo-500 flex justify-center items-center mr-4 mt-4" do %>
                <svg class="stroke-indigo-500 group-hover:stroke-white size-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            <% end %>
        </div>
    <% end %>
</div>
