<div class="flex flex-col mb-4">
    <h1 class="text-4xl font-bold text-center bg-linear-to-r from-indigo-500 to-cyan-500 bg-clip-text text-transparent">Find any book</h1>
    <%= form_with url: root_path, method: :get, class: "relative" do |form| %>
        <%= form.search_field :query, placeholder: "Search...", class: "rounded-2xl border border-gray-300 shadow-xs w-2xl h-16 p-4 pr-10 outline-0 mt-6" %>
        <%= form.button name: nil, class: "size-8 bg-linear-to-r from-indigo-500 to-cyan-500 hover:from-indigo-600 hover:to-cyan-600 rounded-3xl flex justify-center items-center absolute right-1 bottom-1" do %>
            <svg class="size-4 stroke-white stroke-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
            </svg>
        <% end %>
    <% end %>
    <% @books.each do |book| %>
        <div class="rounded-2xl border border-gray-200 flex justify-between mt-4 w-2xl">
            <div class="flex">
                <div class="m-2 rounded-xl overflow-hidden shadow-xs shadow-gray-500">
                    <%= image_tag book["image_url"], class: "w-16 h-24 object-cover" %>
                </div>
                <div class="flex flex-col justify-center ml-4 py-4">
                    <h2 class="text-2xl text-gray-600 font-medium"><%= book["title"].truncate(45) %></h2>
                    <p class="text-gray-500 font-light">
                        <%= book["authors"].first(3).join(", ") %>
                    </p>
                    <div class="flex mt-1">
                        <svg class="size-5 fill-amber-300 stroke-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-600 font-light text-sm pl-1"><%= book["average_rating"].round(2) %></span>
                        <span class="text-gray-400 font-light text-sm pl-1">(<%= book["ratings_count"] %>)</span>
                    </div>
                </div>
            </div>
            <%= button_to "", class: "group size-10 rounded-3xl border-2 border-indigo-500  hover:bg-indigo-500 flex justify-center items-center mr-2 mt-2" do %>
                <svg class="stroke-indigo-500 group-hover:stroke-white size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            <% end %>
        </div>
    <% end %>
</div>
